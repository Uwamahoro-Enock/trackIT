{
  "compilerOptions": {
    "module": "commonjs", // Use CommonJS for compatibility with Node.js
    "esModuleInterop": true, // Allow interoperability between CommonJS and ES modules
    "allowSyntheticDefaultImports": true, // Allow synthetic default imports
    "declaration": true, // Generate .d.ts files
    "removeComments": true, // Remove comments in the output
    "emitDecoratorMetadata": true, // Emit metadata for decorators
    "experimentalDecorators": true, // Enable experimental decorators
    "target": "ES2021", // Target ES2021 for modern JavaScript features
    "sourceMap": true, // Generate source maps for debugging
    "incremental": true, // Enable incremental compilation
    "skipLibCheck": true, // Skip type checking of declaration files
    "strictNullChecks": false, // Disable strict null checks
    "noImplicitAny": false, // Disable implicit any type checking
    "strictBindCallApply": false, // Disable strict bind/call/apply checks
    "forceConsistentCasingInFileNames": false, // Disable consistent casing enforcement
    "noFallthroughCasesInSwitch": false, // Disable fallthrough case checking
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/generated/*"]
    }
  
  }
}